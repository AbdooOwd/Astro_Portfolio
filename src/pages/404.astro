---
import MyBaseLayout from '../layouts/MyBaseLayout.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<style>
    h1 {
        color: white;
        text-align: center;
    }

    img {
        width: 35vh;
    }

    .logo404 {
        font-size: 140px;
        font-family: 'Courier New', Courier, monospace;
        color:white;
        background-color: rgb(87, 128, 92);
        border-radius: 35px;
        padding-top: 6px;
        padding-bottom: 0px;
    }

    .secret-btn {
        color: transparent;
        text-decoration: none;

        padding: 5px 60px;
        border-radius: 5px;

        transition-duration: 0.4s;
        opacity: 0;
    }

    .secret-btn:hover {
        opacity: 0.2;
        color: rgb(255, 255, 255);
        background-color: rgb(36, 37, 46);
    }

</style>

<MyBaseLayout>
    
    <center>
        <!-- <img src={logo404} alt="404.png"> -->
        <h1 class="logo404">4 0 4</h1>
        <a href="/secret" class="secret-btn">Secret</a>
        <h1>
            Error 404
            <br/>Page Not Found
        </h1>
    </center>

    
</MyBaseLayout>